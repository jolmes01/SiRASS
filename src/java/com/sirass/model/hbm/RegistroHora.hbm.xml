<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.sirass.model.RegistroHora" table="DControlHoras">
      <id column="idDControlHoras" name="idRegistroHora" type="integer" length="11">
          <generator class="native" />
      </id>
<!--      <many-to-one name="controlHoras" class="com.sirass.model.ControlHoras" column="idControlHoras" />-->
      <property name="fecha" column="fecha" type="date" not-null="true" />
      <property name="horaEntrada" column="horaEntrada" type="time" not-null="true" />
      <property name="horaSalida" column="horaSalida" type="time" not-null="true" />
      <property name="horasDia" column="horasDia" type="integer" length="11" not-null="true" />
  </class>
</hibernate-mapping>
