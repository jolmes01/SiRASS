<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <description>ServletContextListener, ServletContextAttributeListener</description>
        <listener-class>web.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>account.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>account.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>account.Signup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/Signup</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/error/forbidden.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>Admins</display-name>
        <web-resource-collection>
            <web-resource-name>Administradores</web-resource-name>
            <description/>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
            <role-name>adminGeneral</role-name>
            <role-name>revision</role-name>
            <role-name>generar</role-name>
            <role-name>consulta</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Prestadores</display-name>
        <web-resource-collection>
            <web-resource-name>Prestador</web-resource-name>
            <description/>
            <url-pattern>/prestador/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>prestador</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Instituciones</display-name>
        <web-resource-collection>
            <web-resource-name>Instituci√≥n</web-resource-name>
            <description/>
            <url-pattern>/institucion/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>prestador</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/index.jsp</form-login-page>
            <form-error-page>/error/error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>adminGeneral</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>prestador</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>institucion</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>revision</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>generar</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>consulta</role-name>
    </security-role>
</web-app>
